@model IEnumerable<Sistemawebcf.Models.Producto>

@{
    ViewData["Title"] = "Listado de Productos";
}

<h1>Productos</h1>

<p>
    <a asp-action="Create"> Crear nuevo Producto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio_venta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categoria)
            </th>
            <th> Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.precio_venta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
               @if (item.estado ?? false)
               {
                  <span>Activo</span>
               } else {
                  <span>Inactivo</span>
               }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categoria.nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idproducto">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idproducto">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.idproducto">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
